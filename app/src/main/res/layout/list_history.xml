<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/ly_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:layout_margin="15dp"
    app:cardCornerRadius="7dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1.0"
    android:layout_marginBottom="10dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_weight="0.75"
    android:layout_width="0dip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#040404"
        android:fontFamily="sans-serif-condensed"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="#343434"
        android:fontFamily="sans-serif"
        android:textSize="12sp"
        android:layout_marginTop="1dip" />

    <TextView
        android:id="@+id/date"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/name"
        android:textColor="#343434"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="12sp"
        android:layout_marginTop="1dip"/>
</LinearLayout>

    <TextView
        android:id="@+id/btn_status"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_width="0dip"
        android:layout_gravity="end"
        android:gravity="end"/>
    <!--<mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_status"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_width="0dip"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        fancy:fb_borderColor="@color/light_grey"
        fancy:fb_borderWidth="0dp"
        fancy:fb_defaultColor="@color/light_grey"
        fancy:fb_focusColor="@android:color/transparent"
        fancy:fb_radius="7dp"
        fancy:fb_text="@string/btn_done"
        fancy:fb_textColor="@color/white" />-->
</LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_cancel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:padding="5dp"
        android:layout_gravity="start"
        fancy:fb_borderColor="@color/light_grey"
        fancy:fb_borderWidth="0dp"
        fancy:fb_defaultColor="@color/red_background"
        fancy:fb_focusColor="@android:color/transparent"
        fancy:fb_fontIconResource="&#xf273;"
        fancy:fb_fontIconSize="17dp"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="7dp"
        fancy:fb_text="@string/cancel"
        fancy:fb_textColor="@color/white"
        android:visibility="gone" />
</LinearLayout>
</androidx.cardview.widget.CardView>